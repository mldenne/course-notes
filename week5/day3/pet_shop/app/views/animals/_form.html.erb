<% if animal.errors.any? %>
  <ul id="errors">
    <% animal.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for animal, html: {class: 'pearl_jam'} do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :temperment %>
    <%= f.text_field :temperment %>
  </p>
  <%= f.submit %>
<% end %>
