<% if animal.errors.any? %>
  <ul id="errors">
    <% animal.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for animal, html: {class: 'pearl_jam'} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :temperment %>
    <%= f.text_field :temperment, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :breed %>
    <%= f.select :breed_id, Breed.order(name: :asc).map{|b| [b.name, b.id]}, {include_blank: true}, class: 'form-control' %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

<%= simple_form_for animal do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :temperment %>
  <%= f.input :breed %>
  <%= f.submit %>
<% end %>
