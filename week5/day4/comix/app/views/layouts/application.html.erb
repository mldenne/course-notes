<!DOCTYPE html>
<html>
<head>
  <title>Comix</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">
      <% if flash.any? %>
        <% flash.each do |key, message| %>
          <div class="alert alert-<%= key %>">
            <%= message %>
          </div>
        <% end %>
      <% end %>
      <%= yield %>
    </div>
  </div>
</body>
</html>
